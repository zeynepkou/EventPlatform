<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: aliceblue;
            font-family: Arial, sans-serif;
            margin-left: 200px;
            transition: margin-left 0.3s;
        }

        .sidebar {
            height: 100vh;
            width: 200px;
            background-color: #4a69bd;
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
            transition: width 0.3s;
            overflow-x: hidden;
        }

            .sidebar.collapsed {
                width: 60px;
            }

        .menu-icon {
            cursor: pointer;
            font-size: 1.5rem;
            color: white;
            margin-bottom: 20px;
        }

        .menu-icon-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
        }

        .sidebar .nav-link {
            display: flex;
            align-items: center;
            justify-content: center;
            color: #f8f9fa;
            font-size: 1.1rem;
            padding: 10px 15px;
            margin: 0;
            width: 100%;
            border-radius: 8px;
            text-align: center;
            transition: font-size 0.3s, padding 0.3s, background-color 0.3s;
            box-sizing: border-box;
        }

            .sidebar .nav-link i {
                margin-right: 8px;
                font-size: 1.2rem;
            }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            padding: 10px 0;
        }

            .sidebar.collapsed .nav-link i {
                font-size: 1.5rem;
                margin-right: 0;
            }

        .sidebar.collapsed .link-text {
            display: none;
        }

        .sidebar .nav-link:hover {
            background-color: #3D59A5;
        }

        .sidebar .nav-link.active {
            background-color: #3D59A5;
            color: #ffffff;
            font-weight: bold;
        }

        .content {
            padding: 30px;
            transition: padding-left 0.3s;
        }

        .collapsed + .content {
            margin-left: 60px;
        }

        .logout {
            margin-top: 20px;
            text-align: center;
        }

            .logout a {
                color: #f8f9fa;
                text-decoration: none;
                font-size: 1.1rem;
            }

                .logout a:hover {
                    color: #ffffff;
                    font-weight: bold;
                }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column align-items-center" id="sidebar">
        <div class="menu-icon-wrapper">
            <i class="fas fa-bars menu-icon" onclick="toggleSidebar()"></i>
        </div>
        <a href="/Admin/AdminIndex" class="nav-link active"><i class="fas fa-home"></i> <span class="link-text">Anasayfa</span></a>
        <a href="/Chat/AdminChat" class="nav-link"><i class="fas fa-comments"></i> <span class="link-text">Sohbet</span></a>
        <a href="/KullanıcıProfil/AdminProfili" class="nav-link"><i class="fas fa-user"></i> <span class="link-text">Profil</span></a>
        <a href="/Etkinlikler/AdminEtkinlik" class="nav-link"><i class="fas fa-calendar-alt"></i> <span class="link-text">Etkinlikler</span></a>
        <a href="/Admin/KullanıcıYönetimi" class="nav-link"><i class="fas fa-users"></i> <span class="link-text">Kullanıcılar</span></a>
        <a href="/Admin/GeriBildirim" class="nav-link"><i class="fas fa-comment-dots"></i> <span class="link-text">Geri Bildirimler</span></a>
        <a href="/Admin/Rapor" class="nav-link"><i class="fas fa-chart-bar"></i><span class="link-text">Raporlar</span></a>

        <!-- Çıkış -->
        <div class="logout mt-auto mb-3">
            <a href="/LoginPage/Index">
                <i class="fas fa-sign-out-alt"></i> <span class="link-text">Çıkış Yap</span>
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="content" id="content">
        @RenderBody()
    </main>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById("sidebar");
            const content = document.getElementById("content");
            sidebar.classList.toggle("collapsed");
            document.body.classList.toggle("collapsed");
        }
    </script>
</body>
</html>
